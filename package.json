{
  "name": "api-automation",
  "version": "1.0.0",
  "description": "API Automation",
  "main": "index.js",
  "engines": {
    "node": "16.13.0"
  },
  "scripts": {
    "test": "NODE_ENV=local mocha",
    "test:qa": "NODE_ENV=qa mocha",
    "generate:report": "NODE_ENV=local mocha --reporter mochawesome || true",
    "generate:report:qa": "NODE_ENV=qa mocha --reporter mochawesome || true",
    "open:report": "open mochawesome-report/mochawesome.html",
    "lint": "eslint . --max-warnings 0 -f html -o eslint-report.html",
    "lint-fix": "eslint . --fix",
    "lint-file": "eslint $file -f html -o eslint-report.html",
    "lint-file-fix": "eslint $file --fix"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.1.3",
    "mochawesome": "^7.0.1"
  },
  "dependencies": {
    "dotenv": "^11.0.0",
    "pino": "^7.6.3",
    "pino-pretty": "^7.3.0",
    "supertest": "^6.2.0"
  }
}
